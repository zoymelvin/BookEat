<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".WelcomePage2"
    >

    <ImageButton
        android:id="@+id/ib_back_welcomepage3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="210dp"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="110dp"
                android:src="@drawable/iconpay"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Terima Pembayaran Online Lebih Mudah."
            android:fontFamily="@font/poppinsextrabold"
            android:textSize="15sp"
            android:textAppearance="@style/buka_peluan"
            android:gravity="center"
            />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:text="Dengan aplikasi kami, pembayaran online menjadi sangat sederhana. Pelanggan Anda dapat dengan mudah melakukan pembayaran melalui ponsel tanpa harus repot-repot membawa uang tunai atau kartu kredit."
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            android:textAppearance="@style/bergabungla"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/slogan"
            android:text="DAFTAR"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:letterSpacing="0.1"
            android:fontFamily="@font/bebasneue"/>

        <TextView
            android:id="@+id/tv_punya_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="@string/belum_punya"
            android:textColor="@android:color/darker_gray"
            android:textSize="13dp"
            android:clickable="true"/>

    </LinearLayout>

</RelativeLayout>