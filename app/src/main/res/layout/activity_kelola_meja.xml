<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".KelolaMeja">

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="-5dp"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="@color/slogan2"
        android:elevation="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="25dp"
            android:text="Kelola Meja"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsextrabold"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/btn_kelolaback"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="210dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/slogan2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="180dp"
            android:src="@drawable/shapekosong1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:text="Kosong"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/shapekosong2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:text="Terisi"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/shapekosong3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:text="Dipilih"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_meja"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        app:spanCount="4">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_kosongmeja"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:elevation="5dp"
            android:backgroundTint="@color/slogan2"
            android:fontFamily="@font/bebasneue"
            android:letterSpacing="0.1"
            android:text="KOSONGKAN"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btn_isimeja"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:backgroundTint="@color/slogan4"
            android:fontFamily="@font/bebasneue"
            android:letterSpacing="0.1"
            android:text="ISI MEJA"
            android:textColor="@color/black"
            android:textSize="24dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_konfirmasimeja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:backgroundTint="@color/slogan"
        android:fontFamily="@font/bebasneue"
        android:letterSpacing="0.1"
        android:text="ISI MEJA"
        android:textColor="@color/white"
        android:textSize="24dp" />

</LinearLayout>