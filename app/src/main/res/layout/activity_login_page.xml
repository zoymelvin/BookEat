<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".LoginPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LOGIN PENGELOLA RESTO"
            android:textSize="20dp"
            android:textColor="@color/slogan"
            android:letterSpacing="0.2"/>

        <EditText
            android:id="@+id/loginuser"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:autofillHints=""
            android:background="@drawable/et_outline"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:paddingHorizontal="15dp"/>

        <EditText
            android:id="@+id/loginpass"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:autofillHints=""
            android:background="@drawable/et_outline"
            android:hint="password"
            android:inputType="textPassword"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:paddingHorizontal="15dp"/>

        <TextView
            android:id="@+id/lupa_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:text="Lupa Password?"
            android:textSize="9dp"
            android:textColor="@android:color/darker_gray"
            android:clickable="true"
            android:onClick="lupaPasswordClick" />

        <Button
            android:id="@+id/btn_restolog"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/slogan"
            android:fontFamily="@font/bebasneue"
            android:letterSpacing="0.1"
            android:text="LOGIN"
            android:textSize="32dp"/>

    </LinearLayout>


</LinearLayout>