<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/slogan"
    tools:context=".RegisterPage">

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:layout_marginTop="-16dp"
        android:layout_marginLeft="-5dp"
        android:elevation="30dp"
        android:background="@drawable/bg_rounded">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo2"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/tv_bookeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="258dp"
            android:text="BookEat"
            android:textSize="17sp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:gravity="center"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:fontFamily="@font/poppinsextrabold"
                android:text="PENDAFTARAN LAYANAN PARTNER"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:letterSpacing="0.1"
                />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_rounded3"
                android:backgroundTint="@color/white"
                android:elevation="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:paddingLeft="5dp"
                    android:text="Nama Resto"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/et_namaresto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:autofillHints=""
                    android:hint="masukkan nama resto"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:paddingHorizontal="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:paddingLeft="5dp"
                    android:text="No. Telepon"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/et_notelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:autofillHints=""
                    android:hint="masukkan nomor telepon resto"
                    android:inputType="phone"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:paddingHorizontal="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:paddingLeft="5dp"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/et_emailresto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:autofillHints=""
                    android:hint="masukkan email resto"
                    android:inputType="textEmailAddress"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:paddingHorizontal="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:paddingLeft="5dp"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/et_passwordresto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:autofillHints=""
                    android:hint="masukkan password"
                    android:inputType="textPassword"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:paddingHorizontal="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:paddingLeft="5dp"
                    android:text="Alamat"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/et_alamatresto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:autofillHints=""
                    android:hint="masukkan alamat resto"
                    android:inputType="text"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:paddingHorizontal="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:paddingLeft="5dp"
                    android:text="Masukkan Foto Resto"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/iv_upload_resto"
                        android:layout_width="320dp"
                        android:layout_height="150dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/iconupload2"
                        android:background="@drawable/bg_rounded_upload"
                        android:layout_gravity="center_horizontal"/>

                    <ImageButton
                        android:id="@+id/ib_upload_resto"
                        android:layout_width="320dp"
                        android:layout_height="150dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_horizontal" />

                </RelativeLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="5dp"
                    android:backgroundTint="@color/slogan"
                    android:fontFamily="@font/bebasneue"
                    android:letterSpacing="0.1"
                    android:text="DAFTAR"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>